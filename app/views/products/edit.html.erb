<h1><%= t('.edit_product') %></h1>

<%= form_for @product do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>
   
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true, autocomplete: 'description', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :reorder_level %>
    <%= f.text_field :reorder_level, autofocus: true, autocomplete: 'reorder_level', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, autofocus: true, autocomplete: 'price', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, autofocus: true, autocomplete: 'quantity', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Edit product", class: 'btn btn-primary' %>
  </div>
<% end %>
